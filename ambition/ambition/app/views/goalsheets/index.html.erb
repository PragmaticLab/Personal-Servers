<p id="notice"><%= notice %></p>

<h1>Listing Goalsheets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Goals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goalsheets.each do |goalsheet| %>
      <tr>
        <td><%= goalsheet.time %></td>
        <td><%= link_to 'Show', goalsheet %></td>
        <td><%= link_to 'Edit', edit_goalsheet_path(goalsheet) %></td>
        <td><%= link_to 'Destroy', goalsheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goalsheet', new_goalsheet_path %>
